/* pages/certificates/certificates.wxss */

.certificates-container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 32rpx;
}

/* 提示信息 */
.tips-section {
  display: flex;
  align-items: center;
  background: rgba(25, 118, 210, 0.1);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.tips-text {
  font-size: 26rpx;
  color: var(--primary-color);
  margin-left: 12rpx;
}

/* 证件列表 */
.certificates-list {
  margin-bottom: 32rpx;
}

.certificate-item {
  background: var(--surface-color);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.certificate-header {
  margin-bottom: 24rpx;
}

.certificate-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.certificate-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.certificate-content {
  min-height: 200rpx;
}

/* 证件图片 */
.certificate-image-wrapper {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.certificate-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.image-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.certificate-details {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.upload-time {
  margin-bottom: 8rpx;
}

.certificate-note {
  color: var(--text-hint);
}

/* 上传区域 */
.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  border: 2rpx dashed var(--divider-color);
  border-radius: 12rpx;
  background: var(--background-color);
}

.upload-text {
  font-size: 26rpx;
  color: var(--text-hint);
  margin-top: 16rpx;
}

/* 上传须知 */
.notice-section {
  background: var(--surface-color);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.notice-item text {
  margin-left: 12rpx;
  flex: 1;
}

/* 加载状态 */
.loading-section {
  padding: 120rpx 32rpx;
  text-align: center;
}

/* 上传遮罩 */
.uploading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.uploading-content {
  background: var(--surface-color);
  border-radius: 16rpx;
  padding: 60rpx 80rpx;
  text-align: center;
}

.uploading-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-top: 24rpx;
}