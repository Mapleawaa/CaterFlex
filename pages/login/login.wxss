/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1976D2 0%, #42A5F5 100%);
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
}

/* 头部Logo区域 */
.header-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0 40rpx;
}

.logo-area {
  text-align: center;
  color: white;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.1);
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  opacity: 0.8;
  line-height: 1.5;
}

/* 用户类型选择 */
.user-type-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
}

/* 登录方式选择 */
.login-type-section {
  background: white;
  border-radius: 16rpx 16rpx 0 0;
  padding: 32rpx 32rpx 0;
}

/* 表单区域 */
.form-section {
  background: white;
  padding: 32rpx;
  border-radius: 0 0 16rpx 16rpx;
  flex: 2;
}

.input-group {
  margin-bottom: 32rpx;
}

.form-input {
  background: #f8f9fa;
  border-radius: 12rpx;
}

.sms-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sms-input {
  flex: 1;
}

.sms-btn {
  width: 200rpx;
  flex-shrink: 0;
}

/* 协议区域 */
.agreement-section {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  gap: 16rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  flex: 1;
}

.link-text {
  color: var(--primary-color);
  text-decoration: underline;
}

/* 登录按钮 */
.login-btn {
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border-radius: 12rpx;
  font-weight: 600;
}

.wechat-login-btn {
  border: 2rpx solid var(--divider-color);
  border-radius: 12rpx;
  color: #07C160;
}

/* 底部区域 */
.footer-section {
  padding: 40rpx 0;
}

.footer-links {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-links .link-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .login-container {
    padding: 0 24rpx;
  }
  
  .header-section {
    padding: 60rpx 0 32rpx;
  }
  
  .logo {
    width: 100rpx;
    height: 100rpx;
  }
  
  .app-name {
    font-size: 40rpx;
  }
  
  .form-section {
    padding: 24rpx;
  }
}

/* 调试登录按钮 */
.debug-login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8E53);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
}

.debug-login-btn:active {
  background: linear-gradient(135deg, #E55A2B, #FF6B35);
  transform: translateY(2rpx);
}

.debug-login-btn::after {
  border: none;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .form-section {
    background: #1e1e1e;
    color: white;
  }
  
  .form-input {
    background: #2d2d2d;
    color: white;
  }
  
  .agreement-text {
    color: #cccccc;
  }
}