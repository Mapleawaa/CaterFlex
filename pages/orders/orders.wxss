/* pages/orders/orders.wxss */

.orders-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 标签切换区域 */
.tabs-section {
  background: white;
  display: flex;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1976D2;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 100%);
  border-radius: 3rpx;
}

/* 订单列表 */
.orders-list {
  padding: 30rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #1976D2;
  transition: all 0.3s ease;
}

.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.status-tag {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-pending {
  background: #FFF3E0;
  color: #FF9800;
}

.status-working {
  background: #E8F5E8;
  color: #4CAF50;
}

.status-completed {
  background: #E3F2FD;
  color: #1976D2;
}

.status-cancelled {
  background: #FFEBEE;
  color: #F44336;
}

/* 订单信息 */
.order-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  margin-right: 16rpx;
  min-width: 140rpx;
}

.info-value {
  color: #333;
  flex: 1;
  font-weight: 500;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #F0F0F0;
}

.order-date {
  font-size: 24rpx;
  color: #999;
}

.order-salary {
  font-size: 32rpx;
  color: #FF9800;
  font-weight: 700;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #1976D2;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
  color: #999;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .tab-item {
    padding: 25rpx 15rpx;
    font-size: 26rpx;
  }
  
  .order-item {
    padding: 25rpx;
    margin-bottom: 16rpx;
  }
  
  .job-title {
    font-size: 30rpx;
  }
  
  .info-item {
    font-size: 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .orders-container {
    background-color: #121212;
  }
  
  .tabs-section,
  .order-item {
    background: #1E1E1E;
  }
  
  .job-title,
  .info-value {
    color: #FFFFFF;
  }
  
  .info-label,
  .loading-text,
  .empty-text {
    color: #CCCCCC;
  }
  
  .empty-desc {
    color: #999999;
  }
  
  .order-footer {
    border-top-color: #333333;
  }
}