/* pages/index/index.wxss */

.index-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 头部区域 */
.header-section {
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 100%);
}

.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  border: 4rpx solid #E3F2FD;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.user-type {
  font-size: 24rpx;
  color: #666;
  background: #E3F2FD;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.location-info {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 6rpx solid #FF9800;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

/* 欢迎卡片 */
.welcome-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.app-logo {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #1976D2;
}

.app-logo .bi {
  font-size: 80rpx;
}

.welcome-text {
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.app-desc {
  font-size: 26rpx;
  color: #666;
}

.login-btn {
  background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(255, 152, 0, 0.3);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
}

/* 快捷操作区域 */
.quick-actions-section {
  margin: 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: #F5F5F5;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-icon .bi {
  font-size: 36rpx;
  color: white;
}

.action-name {
  font-size: 22rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

/* 通用区块样式 */
.recommendation-section,
.nearby-section,
.hot-jobs-section,
.stats-section,
.recommended-workers-section {
  margin: 30rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: inherit;
}

.section-action {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #1976D2;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #E3F2FD;
}

.section-action:active {
  background: #BBDEFB;
}

.arrow {
  font-size: 28rpx;
  margin-left: 4rpx;
}

/* 岗位列表样式 */
.jobs-scroll {
  width: 100%;
}

.jobs-list.horizontal {
  display: flex;
  gap: 20rpx;
  padding-bottom: 10rpx;
}

.jobs-list.vertical {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.job-card.horizontal {
  min-width: 280rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #1976D2;
  position: relative;
}

.job-card.vertical {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #1976D2;
}

.job-card:active {
  transform: scale(0.98);
  background: #ECEFF1;
}

.job-header {
  margin-bottom: 16rpx;
}

.job-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.job-salary {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF9800;
}

.job-company {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.job-location {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #888;
  margin-bottom: 16rpx;
}

.location-icon {
  margin-right: 6rpx;
}

.job-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.job-tag {
  background: #E3F2FD;
  color: #1976D2;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.match-score {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 12rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  border-radius: 12rpx;
  margin-top: 12rpx;
}

.match-text {
  font-size: 20rpx;
  color: white;
}

.match-value {
  font-size: 24rpx;
  font-weight: 600;
  color: white;
}

/* 垂直岗位卡片 */
.job-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.job-info {
  flex: 1;
}

.job-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.job-time {
  font-size: 22rpx;
  color: #666;
}

.job-status {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.status-urgent {
  background: #FFEBEE;
  color: #F44336;
}

.status-normal {
  background: #E8F5E8;
  color: #4CAF50;
}

.status-full {
  background: #FFF3E0;
  color: #FF9800;
}

/* 热门岗位网格 */
.hot-jobs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.hot-job-item {
  background: linear-gradient(135deg, #FF9800 0%, #FFB74D 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  color: white;
  text-align: center;
}

.hot-job-item:active {
  transform: scale(0.95);
}

.hot-job-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.hot-job-salary {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.hot-job-count {
  font-size: 20rpx;
  opacity: 0.9;
}

/* 企业统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 100%);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  color: white;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 推荐求职者列表 */
.workers-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.worker-card {
  display: flex;
  align-items: center;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #4CAF50;
}

.worker-card:active {
  transform: scale(0.98);
  background: #ECEFF1;
}

.worker-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  border: 4rpx solid #E8F5E8;
}

.worker-info {
  flex: 1;
}

.worker-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.worker-experience {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.worker-skills {
  display: flex;
  gap: 8rpx;
}

.skill-tag {
  background: #E8F5E8;
  color: #4CAF50;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.worker-rating {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.rating-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF9800;
}

.rating-star {
  font-size: 24rpx;
}

/* 加载和空状态 */
.loading-section,
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.loading-icon,
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #999;
}

.loading-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.complete-profile-btn {
  background: linear-gradient(135deg, #1976D2 0%, #42A5F5 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(25, 118, 210, 0.3);
}

.complete-profile-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(25, 118, 210, 0.3);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .action-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 20rpx;
  }
  
  .action-icon {
    width: 70rpx;
    height: 70rpx;
    font-size: 32rpx;
  }
  
  .action-name {
    font-size: 20rpx;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .hot-jobs-grid {
    grid-template-columns: 1fr;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .index-container {
    background-color: #121212;
  }
  
  .user-card,
  .welcome-card,
  .quick-actions-section,
  .recommendation-section,
  .nearby-section,
  .hot-jobs-section,
  .stats-section,
  .recommended-workers-section {
    background: #1E1E1E;
    color: #FFFFFF;
  }
  
  .job-card.horizontal,
  .job-card.vertical,
  .worker-card {
    background: #2C2C2C;
  }
  
  .job-title,
  .worker-name,
  .section-title {
    color: #FFFFFF;
  }
  
  .job-company,
  .worker-experience,
  .loading-text,
  .empty-text {
    color: #CCCCCC;
  }
}