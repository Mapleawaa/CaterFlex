/* pages/personal-info/personal-info.wxss */

.personal-info-container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头像区域 */
.avatar-section {
  background: var(--surface-color);
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.avatar-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 16rpx;
}

.user-avatar {
  border: 4rpx solid var(--divider-color);
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid white;
}

.upload-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.avatar-tip {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 表单区域 */
.form-section {
  margin-bottom: 24rpx;
}

.picker-value {
  color: var(--text-primary);
}

/* 个人简介 */
.intro-section {
  background: var(--surface-color);
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

/* 错误提示 */
.errors-section {
  background: var(--surface-color);
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.error-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.error-text {
  font-size: 26rpx;
  color: var(--error-color);
  margin-left: 8rpx;
}

/* 保存按钮 */
.save-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--surface-color);
  padding: 32rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}