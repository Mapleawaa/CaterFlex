/* pages/work-experience/work-experience.wxss */

.work-experience-container {
  background-color: var(--background-color);
  min-height: 100vh;
  padding: 32rpx;
}

/* 头部操作 */
.header-section {
  margin-bottom: 32rpx;
}

/* 经验列表 */
.experience-list {
  margin-bottom: 32rpx;
}

.experience-card {
  background: var(--surface-color);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.position {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.work-period {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.description {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.skills-section {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.skill-tag {
  margin: 0;
}

/* 空状态和加载 */
.empty-section,
.loading-section {
  padding: 120rpx 32rpx;
  text-align: center;
}

/* 对话框样式 */
.dialog-content {
  background: var(--surface-color);
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.dialog-form {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.picker-input {
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--divider-color);
  color: var(--text-primary);
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.skill-checkbox {
  font-size: 26rpx;
}

.dialog-actions {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 2rpx solid var(--divider-color);
}