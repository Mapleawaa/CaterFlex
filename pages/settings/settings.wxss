/* pages/settings/settings.wxss */

.settings-container {
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: var(--surface-color);
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.user-info {
  margin-left: 24rpx;
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 设置区域 */
.settings-section {
  margin-bottom: 24rpx;
}

.actions-section {
  margin-bottom: 24rpx;
}

.version-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 版本信息 */
.version-section {
  padding: 60rpx 32rpx;
  text-align: center;
}

.version-info {
  color: var(--text-hint);
}

.app-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.version-number {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.copyright {
  font-size: 22rpx;
}