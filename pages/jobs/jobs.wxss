/* pages/jobs/jobs.wxss */

.jobs-container {
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 搜索和筛选区域 */
.search-section {
  background: white;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid var(--divider-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  border-radius: 36rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.3s ease;
}

.search-input:focus {
  border-color: var(--primary-color);
  background: white;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-btn:active {
  background: var(--primary-dark);
}

.search-btn::after {
  border: none;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 16rpx;
}

.filter-item {
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: rgba(25, 118, 210, 0.1);
  color: var(--primary-color);
  border-color: var(--primary-color);
}

.filter-item:active {
  transform: scale(0.95);
}

/* 岗位列表 */
.jobs-list {
  padding: 24rpx 32rpx;
}

.job-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.job-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
  margin-right: 16rpx;
}

.job-salary {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--accent-color);
  white-space: nowrap;
}

.job-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.company-name {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.job-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-hint);
}

.location-icon {
  font-size: 20rpx;
}

.job-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.job-tag {
  padding: 8rpx 16rpx;
  background: rgba(25, 118, 210, 0.1);
  color: var(--primary-color);
  border-radius: 12rpx;
  font-size: 22rpx;
}

.job-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.job-time {
  font-size: 24rpx;
  color: var(--text-hint);
}

.job-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-high {
  background: rgba(244, 67, 54, 0.1);
  color: var(--error-color);
}

.status-medium {
  background: rgba(255, 152, 0, 0.1);
  color: var(--warning-color);
}

.status-low {
  background: rgba(76, 175, 80, 0.1);
  color: var(--success-color);
}

.publish-time {
  font-size: 22rpx;
  color: var(--text-hint);
}

/* 加载和空状态 */
.loading-section,
.empty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.loading-icon,
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.loading-text,
.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-hint);
}

/* 弹窗样式 */
.filter-popup,
.sort-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-popup.show,
.sort-popup.show {
  opacity: 1;
  visibility: visible;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-popup.show .popup-content,
.sort-popup.show .popup-content {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.popup-close {
  font-size: 32rpx;
  color: var(--text-hint);
  padding: 8rpx;
}

.filter-options,
.sort-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.filter-option,
.sort-option {
  padding: 24rpx 32rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-option.active,
.sort-option.active {
  background: rgba(25, 118, 210, 0.1);
  color: var(--primary-color);
  border-color: var(--primary-color);
}

.filter-option:active,
.sort-option:active {
  transform: scale(0.98);
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .search-section {
    padding: 20rpx 24rpx;
  }
  
  .jobs-list {
    padding: 20rpx 24rpx;
  }
  
  .job-card {
    padding: 24rpx;
  }
  
  .filter-bar {
    gap: 12rpx;
  }
  
  .filter-item {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
  }
}