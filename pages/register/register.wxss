/* pages/register/register.wxss */

.register-container {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  min-height: 100vh;
  padding: 60rpx 32rpx 32rpx;
}

/* 头部区域 */
.header-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-area {
  color: white;
}

.app-logo {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.app-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.register-title {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 用户类型选择 */
.user-type-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
}

/* 表单区域 */
.form-section {
  background: var(--surface-color);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 32rpx;
}

.verify-code-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.verify-code-item .t-input {
  flex: 1;
}

.verify-btn {
  flex-shrink: 0;
  width: 200rpx;
}

/* 协议区域 */
.agreement-section {
  margin-bottom: 40rpx;
}

.agreement-links {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.link-text {
  color: var(--primary-color);
  text-decoration: underline;
}

.error-text {
  color: var(--error-color);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 提交按钮 */
.submit-section {
  margin-bottom: 32rpx;
}

.submit-btn {
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 登录链接 */
.login-link {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.login-link .link-text {
  color: var(--primary-color);
  font-weight: 500;
}